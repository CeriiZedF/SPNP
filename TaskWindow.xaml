<Window x:Class="SPNP.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPNP"
        mc:Ignorable="d"
        Title="TaskWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Label Content="Багатозадачність"></Label>
        <Button x:Name="DemoButton1"
                Click="DemoButton1_Click"
                Content="Demo"></Button>
        <Button x:Name="DemoButton2"
            Click="DemoButton2_Click"
            Content="Demo"></Button>
        <TextBlock Text="" x:Name="LogTextBlock"></TextBlock>
        <StackPanel Orientation="Vertical" Height="150">
            <Button Content="Parallel" x:Name="StartButton1" Click="StartButton1_Click"/>
            <Button Content="Sequential " x:Name="StartSequentialButton1" Click="StartSequentialButton1_Click"/>
            <ProgressBar Height="20" x:Name="ProgressBar1" Margin="15 0"/>
            <ProgressBar Height="20" x:Name="ProgressBar1_1" Margin="15 0"/>
            <ProgressBar Height="20" x:Name="ProgressBar1_2" Margin="15 0"/>
            <Button Content="Stop" x:Name="StopButton1" Click="StopButton1_Click"/>
        </StackPanel>
    </StackPanel>
</Window>

   